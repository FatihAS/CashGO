<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="id.gravicodev.cashgo.Activity.OnboardActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/onboard_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/onboard_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/onboard_next"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/onboard_layout_dots"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@id/onboard_button_next"
        android:gravity="center"
        android:orientation="horizontal" />

</RelativeLayout>
